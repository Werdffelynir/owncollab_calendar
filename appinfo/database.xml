<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>true</overwrite>
    <charset>utf8</charset>

    <table>
        <name>*dbprefix*collab_calendar</name>
        <declaration>
            <field>
                <name>uid</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>255</length>
                <primary>true</primary>
                <autoincrement>true</autoincrement>
            </field>
            <field>
                <name>id_tasks</name>
                <type>text</type>
                <notnull>false</notnull>
            </field>
        </declaration>
    </table>

    <table>
        <name>*dbprefix*collab_calendar_group</name>
        <declaration>
            <field>
                <name>gid</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>255</length>
                <primary>true</primary>
                <autoincrement>true</autoincrement>
            </field>
            <field>
                <name>id_tasks</name>
                <type>text</type>
                <notnull>false</notnull>
            </field>
        </declaration>
    </table>

</database>